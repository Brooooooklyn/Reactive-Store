  "compilerOptions": {
    "target": "es6",
    "experimentalDecorators": true,
    "sourceMap": true,
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "tools/build",
    "dist"
  ],
  "compileOnSave": false
}
