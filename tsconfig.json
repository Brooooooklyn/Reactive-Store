{
  "compilerOptions": {
    "target": "ES2015",
    "experimentalDecorators": true,
    "sourceMap": true,
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "allowJs": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "tools/build",
    "dist",
    "coverage",
    "example"
  ],
  "compileOnSave": false,
  "awesomeTypescriptLoaderOptions": {
    "useTranspileModule": true,
    "useCache": true
  }
}
